{
  "name": "@augejs/provider-scanner",
  "version": "0.0.22",
  "description": "`provider-scanner` is a scan framework for nodejs.",
  "main": "dist/main.js",
  "scripts": {
    "build": "rimraf dist && tsc --build ./tsconfig.json",
    "deploy": "npm run build && npm publish --access public",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "build:apiDoc": "rimraf apiDocs && typedoc --tsconfig ./tsconfig.json --options ./typedoc.config.json && mkdir -p ./apiDocs/docs/assets && cp -r ./docs/assets/* ./apiDocs/docs/assets",
    "deploy:apiDoc": "npm run build:apiDoc && gh-pages -d apiDocs"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augejs/provider-scanner.git"
  },
  "author": "Alex Zhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/augejs/provider-scanner/issues"
  },
  "homepage": "https://github.com/augejs/provider-scanner#readme",
  "dependencies": {
    "extend": "^3.0.2"
  },
  "devDependencies": {
    "@types/extend": "^3.0.1",
    "@types/jest": "^26.0.10",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "prettier": "2.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "tslib": "^2.0.1",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
