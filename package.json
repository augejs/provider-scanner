{
  "name": "@augejs/provider-scanner",
  "version": "1.0.5",
  "description": "`provider-scanner` is a scan framework for nodejs.",
  "main": "dist/main.js",
  "scripts": {
    "changelog:first": "standard-changelog -f",
    "changelog": "standard-changelog",
    "build": "rimraf dist && tsc --build ./tsconfig.json",
    "deploy": "npm run build && npm publish --access public",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "build:apiDoc": "rimraf apiDocs && typedoc --tsconfig ./tsconfig.json --options ./typedoc.config.json && mkdir -p ./apiDocs/docs/assets && cp -r ./docs/assets/* ./apiDocs/docs/assets",
    "deploy:apiDoc": "npm run build:apiDoc && gh-pages -d apiDocs",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augejs/provider-scanner.git"
  },
  "author": "Alex Zhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/augejs/provider-scanner/issues"
  },
  "homepage": "https://github.com/augejs/provider-scanner#readme",
  "dependencies": {
    "@types/extend": "^3.0.1",
    "extend": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "standard-changelog": "^2.0.27",
    "ts-jest": "^26.5.4",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  }
}
